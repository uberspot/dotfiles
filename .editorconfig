# EditorConfig: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Markdown needs whitespace
[*.{md,markdown,mkd}]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
indent_size = 4
