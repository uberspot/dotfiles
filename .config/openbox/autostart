~/.extra/display.sh

udiskie &
syndaemon -i 2 -d &

(sleep 2s && nitrogen --restore) &
numlockx &

# Launch compton and tint2 with openbox
if which tint2 >/dev/null 2>&1; then
  compton --config ~/.config/compton.conf -b
  tint2 &
fi

redshift -O 3800 &
thunar --daemon &

(sleep 2s && xautolock -time 20 -locker "dm-tool lock") &

qxkb &

# sigh, pulseaudio ...
(sleep 2s && killall pulseaudio) &
(sleep 2s && volumeicon) &
