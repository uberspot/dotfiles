~/.extra/display.sh

udiskie &
syndaemon -i 2 -d &

nitrogen --restore &
numlockx &
# Launch compton and tint2 with openbox
if which tint2 >/dev/null 2>&1; then
  compton --config ~/.config/compton.conf -b
  tint2 &
fi

redshift -O 3800 &
thunar --daemon &

# set speaker to 100% since pulseaudio doesn't keep the change each time :/
amixer set Speaker 100% &

qxkb &

# sigh, pulseaudio ...
(sleep 2s && killall pulseaudio) &
(sleep 2s && volumeicon) &
